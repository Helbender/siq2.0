{
  "files.associations": {
    "*.1m": "json"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
    "[python]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "charliermarsh.ruff",
      "editor.codeActionsOnSave": {
          "source.fixAll": "explicit",
          "source.organizeImports": "explicit",
    }
    }
  ,
    "eslint.enable": true,
    "eslint.useFlatConfig":true,
    // "eslint.options": {"overrideConfigFile":"./frontend/eslint.config.js"},
    "eslint.validate": ["javascript","javascriptreact","html"],
    "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit",
        },
    "ruff.lineLength": 120,
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
    "editor.formatOnType": false, // required
    "editor.formatOnPaste": true, // optional
    "editor.formatOnSave": true, // optional
    "editor.formatOnSaveMode": "file", // required to format on save
    
    // JSX/React specific formatting
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    // "files.autoSave": "onFocusChange", // optional but recommended
    "vs-code-prettier-eslint.prettierLast": true,
    "python.languageServer": "None",
    "python.defaultInterpreterPath": "api/.venv/bin/python",
    "postman.settings.dotenv-detection-notification-visibility": false,
    "sqltools.connections": [
        {
            "previewLimit": 50,
            "driver": "SQLite",
            "name": "SQLITE",
            "database": "api/database.db"
        }
    ],
}